{
  "manifest_version": 3,
  "name": "소마 멘토링 시간표",
  "version": "25.04.05",
  "icons": {
    "128": "128.png"
  },
  "description": "멘토링/특강 게시판에 시간표를 띄워줍니다.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://*.swmaestro.org/*", "https://swmaestro.org/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*.swmaestro.org/sw/mypage/userAnswer/history.do*", "https://swmaestro.org/sw/mypage/userAnswer/history.do*"],
      "js": ["src/utils.js", "src/content.js"],
      "css": ["src/calendar.css"]
    },
    {
      "matches":["https://*.swmaestro.org/sw/mypage/mentoLec/list.do?menuNo=200046*", "https://swmaestro.org/sw/mypage/mentoLec/list.do?menuNo=200046*"],
      "js": ["src/utils.js", "src/mentoring.js"]
    },
    {
      "matches":["https://*.swmaestro.org/sw/mypage/mentoLec/view.do*", "https://swmaestro.org/sw/mypage/mentoLec/view.do*"],
      "js": ["src/utils.js", "src/mentoring_item.js"]
    }
  ]
}